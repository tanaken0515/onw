<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @room.name %>
</p>

<%= link_to 'Edit', edit_room_path(@room) %> |
<%= link_to 'Destroy', @room, method: :delete, data: { confirm: 'Are you sure?' } %> |
<%= link_to 'Back', rooms_path %>

<% if checked_in?(@room) %>
  <h4>Members</h4>
  <p><%= @members.to_s %></p>
<% else %>
  <h4>Check In The Room</h4>
  <p>todo</p>
<% end %>
